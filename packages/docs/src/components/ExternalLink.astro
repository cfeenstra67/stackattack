---
import icon from "../assets/external-link.svg?raw";

interface Props {
  href: string;
  class?: string;
}

const { href, class: className } = Astro.props;
---
<style scoped>
    .link {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .icon {
        height: 1.2rem;
        width: 1.2rem;
    }
</style>

<a class:list={["link", className]} target="_blank" rel="nofollow" href={href}>
    <slot />
    <div class="icon">
        <Fragment set:html={icon} />
    </div>  
</a>
